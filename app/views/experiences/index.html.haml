%h1.center.experience-header
  = @user.username
  's experiences
- @experiences.each do |experience|
  .cards
    .card
      .card-image= image_tag experience.image_url
      .card-header
        = experience.title
        .right= experience.date.strftime("%B %-d, %Y" ) if experience.date.present?
      .card-copy
        %p= experience.description
= will_paginate @experiences
